{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "module": "esnext",
        "target": "es5",
        "importHelpers": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "lib": ["DOM", "DOM.Iterable", "ESNext", "ScriptHost"]
    },
    "include": ["./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.vue"],
    "exclude": ["node_modules"]
}
